"sending: SET PORT_DATA_SET_NP
	123456\.fffe\.780102-1 seq 0 RESPONSE MANAGEMENT PORT_DATA_SET_NP 
		neighborPropDelayThresh 1000
		asCapable               1
	123456\.fffe\.780102-2 seq 0 RESPONSE MANAGEMENT PORT_DATA_SET_NP 
